@model  InStudyAsp.Models.User.Teacher.ViewModelSchedule

@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/jquery.simple-dtpicker.css" rel="stylesheet" type="text/css" />


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.simple-dtpicker.js"></script>
<script src="/Scripts/bootstrap.min.js"></script>

<h2>Edit</h2>

@using (Html.BeginForm("EditPost", "Task"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SCHEDULE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="OldID" id="OldID" value="@Html.ViewBag.BeforeID">

        <div class="form-group">
            @Html.LabelFor(model => model.GROUP_CODE, null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GROUP_CODE", null, htmlAttributes: new { @class = "form-control", before_id = @Html.ViewBag.BeforeID })
                @Html.ValidationMessageFor(model => model.GROUP_CODE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DISCIPLINE_CODE, null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DISCIPLINE_CODE", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DISCIPLINE_CODE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SCHEDULE_DATE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SCHEDULE_DATE, new { htmlAttributes = new { @class = "form-control", name = "SCHEDULE_DATE", id = "SCHEDULE_DATE", disabled="disabled" } })
                @Html.ValidationMessageFor(model => model.SCHEDULE_DATE, "", new {@class = "text-danger"})
            </div>
        </div>
        
        <input type="hidden" name="SCHEDULE_DATE2" id="SCHEDULE_DATE2">
        
        <script type="text/javascript">
            $(function () {
                $("#SCHEDULE_DATE").appendDtpicker({
                    "inline": true,
                    "dateFormat": "DD.MM.YYYY hh:mm",
                });
                
            });
        </script>

        <div class="form-group">
            @Html.LabelFor(model => model.SCHEDULE_ROOM, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ScheduleRoom, new { htmlAttributes = new { @class = "form-control", name = "SCHEDULE_ROOM", id = "SCHEDULE_ROOM" } })
                @Html.ValidationMessageFor(model => model.SCHEDULE_ROOM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" onclick="GetDate" id="submit" class="btn btn-default" />
            </div>
        </div>
    </div>
    <script>
        $("#submit").click(function() {
            $('#SCHEDULE_DATE2').val($("#SCHEDULE_DATE").val());
            console.log("submit1 " + $("#SCHEDULE_DATE").val());
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        <strong> Error!</strong> @ViewBag.Message
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

